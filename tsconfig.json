{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2016",
    "lib": ["es2016", "dom", "dom.iterable"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "sourceRoot": "src",
    "alwaysStrict": true,
    "rootDir": "src",
    "outDir": "build"
  }
}
